<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/newg_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称" />

            <EditText
                android:id="@+id/newg_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_x"
                android:hint="请输入商品名称" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/newg_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品价格" />

            <EditText
                android:id="@+id/newg_et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_x"
                android:hint="请输入商品价格" />

            <TextView
                android:id="@+id/newg_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品描述" />

            <EditText
                android:id="@+id/newg_et_desc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edit_text_x"
                android:hint="请输入商品描述" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/newg_tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="请选择商品类别" 
                    android:textColor="#11aa99"/>

                <Spinner
                    android:id="@+id/newg_sp_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <Button
                android:id="@+id/newg_btn_goimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="去添加商品图片" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>